<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="inc.appscode0.actionbound.StartBoundsActivity_Play">

<ImageView
    android:layout_width="match_parent"
    android:src="@drawable/team"

    android:layout_height="100dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/bootstrapThumbnail" />

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        app:bootstrapBrand="info"
        android:text="What is your team name?"
        android:layout_below="@+id/bootstrapThumbnail"
        android:layout_centerHorizontal="true" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        app:bootstrapSize="md"
        android:ems="20"
        android:textSize="18sp" />

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bootstrapBrand="info"
        android:layout_below="@+id/editText"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="What are your names?" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:ems="20"
        android:inputType="textPersonName"
         />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"

        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_below="@+id/editText2"
        android:ems="20"
        android:inputType="textPersonName"
        />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="30dp"

        android:layout_centerHorizontal="true"

        android:layout_below="@+id/editText3"
        android:ems="20"
        android:inputType="textPersonName"
        />


    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:id="@+id/starttwo"
        android:text="Lets Go"
        android:layout_marginTop="10dp"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:roundedCorners="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText5"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

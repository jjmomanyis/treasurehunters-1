<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="4dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true">

<LinearLayout
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/boundRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:text="Galleria Mine"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:id="@+id/bootstrapLabel"
            android:layout_toLeftOf="@+id/ratingBar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:gravity="left|center_vertical|center_horizontal"
            android:layout_gravity="left|center_vertical|center_horizontal" />
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@android:style/Widget.DeviceDefault.RatingBar.Small"
        android:layout_alignParentTop="false"
        android:layout_alignBottom="@+id/bootstrapLabel"
        android:layout_gravity="center_horizontal"
        android:minHeight="17dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxHeight="18dp" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:riv_corner_radius="5dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ratingBar"
        app:srcCompat="@drawable/treasurehunters" />

        <TextView
            android:id="@+id/textView2"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView2"
            android:text="Find treasure map in the university"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />
    </LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/linearLayoutd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontAwesomeIcon="fa_group"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
          />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Singleplayer"
        android:text="Sinle player"
        android:layout_alignBaseline="@+id/imageView3"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:textSize="14sp"
            android:layout_marginLeft="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linearLayoutdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="right"
            android:foregroundGravity="right"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontAwesomeIcon="fa_map_marker"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Approx 60 minutes"
        android:id="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="14sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp" />

            </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">
    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fontAwesomeIcon="fa_clock_o"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_below="@+id/imageView2"
        android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/textView51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextTTextVieTextViewwextViewView"
            android:layout_alignBottom="@+id/imageView6"
            android:layout_toRightOf="@+id/imageView6"
            android:layout_toEndOf="@+id/imageView6"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>

</android.support.v7.widget.CardView>